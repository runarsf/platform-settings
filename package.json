{
  "name": "platform-settings",
  "displayName": "platform-settings",
  "publisher": "runarsf",
  "author": "runarsf",
  "license": "ISC",
  "description": "Platform-specific VSCode settings.",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.refreshSettings",
        "title": "Refresh platform settings."
      }
    ],
    "configuration": {
      "properties": {
        "platformSettings.autoLoad": {
          "type": "boolean",
          "default": false,
          "description": "Specifies whether platform-settings should be applied automatically on startup."
        },
        "platformSettings.platforms": {
          "type": "object",
          "default": {},
          "title": "Platform definitions",
          "description": "Define each platform (os and machines).",
          "items": {
            "type": "object"
          }
        }
      }
    }
  },
  "scripts": {
    "test": "node ./test/runTest.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/runarsf/vsfloof.git"
  },
  "bugs": {
    "url": "https://github.com/runarsf/platform-settings/issues"
  },
  "homepage": "https://github.com/runarsf/platform-settings",
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.38.0",
    "eslint": "^5.13.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "typescript": "^3.3.1",
    "vscode-test": "^1.2.0"
  }
}